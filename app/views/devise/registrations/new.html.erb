<h2 class="text-4xl font-extrabold text-primary text-center mb-8">Crea cuenta</h2>

<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>


    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name, class: "block text-sm font-medium text-neutral" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "text-neutral mt-1 block w-full px-3 py-2 border border-neutral rounded-lg shadow-sm focus:outline-none focus:ring-primary focus:border-primary" %>
    </div>

    <div class="field mt-5">
      <%= f.label :last_name, class: "block text-sm font-medium text-neutral" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "text-neutral mt-1 block w-full px-3 py-2 border border-neutral rounded-lg shadow-sm focus:outline-none focus:ring-primary focus:border-primary" %>
    </div>

    <div class="field mt-5">
      <%= f.label :email, class: "block text-sm font-medium text-neutral" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-neutral mt-1 block w-full px-3 py-2 border border-neutral rounded-lg shadow-sm focus:outline-none focus:ring-primary focus:border-primary" %>
    </div>

    <div class="field mt-5">
      <%= f.label :password, class: "block text-sm font-medium text-neutral" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-neutral">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "text-neutral mt-1 block w-full px-3 py-2 border border-neutral rounded-lg shadow-sm focus:outline-none focus:ring-primary focus:border-primary" %>
    </div>

    <div class="field mt-5">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-neutral" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-neutral mt-1 block w-full px-3 py-2 border border-neutral rounded-lg shadow-sm focus:outline-none focus:ring-primary focus:border-primary" %>
    </div>

    <div class="actions mt-5">
      <%= f.submit "Sign up", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" %>
    </div>

  <% end %>
  <%= render "devise/shared/links" %>
</div>
