<%=turbo_frame_tag 'turbo_modal' do%>
  <div data-controller="modal" data-action="turbo:submit-end->modal#close">
    <div data-modal-target="modal" class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
      <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4 text-center sm:items-center sm:p-0">
          <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:max-w-xl w-full">
            <div class="bg-white px-6 py-5">
                <%=yield%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
