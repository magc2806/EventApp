<h2 class="text-4xl font-extrabold text-primary text-center mb-8">Log</h2>

<div class="bg-white max-w-md mx-auto bg-surface p-8 rounded-lg shadow-lg">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>

    <div class="field">
      <%= f.label :email, class: "block text-sm font-medium text-neutral" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-neutral rounded-lg shadow-sm focus:outline-none focus:ring-primary focus:border-primary text-neutral" %>
    </div>

    <div class="field mt-5">
      <%= f.label :password, class: "block text-sm font-medium text-neutral" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-neutral rounded-lg shadow-sm focus:outline-none focus:ring-primary focus:border-primary text-neutral" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center mt-2">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-primary focus:ring-primary border-neutral rounded" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-neutral" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log In", class: "mt-2 w-full flex justify-center py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
